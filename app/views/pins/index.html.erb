<h1 class="headline text-center">How I Built my First Web Application</h1>
<div class="row-fluid">
<% @pin.each do |pins| %>	
	<div class="span3 text-center">
		<h3>Hour <%= pins.hour %></h3>
		<p>
		<div class="js-masonry" data-masonry-options='{ "itemSelector": ".item", "columnWidth": 200 }'>		
			<div class="box">
				<div class="img-wrap">
					<p><%= image_tag(pins.pin_image_url(:index_pin).to_s, :class => '') %> </p>
					<div class="img-overlay image-description">
						<h4>What I learned in this hour</h4>
						<p><%= pins.learned %></p>
					</div>
				</div>
					<h4 class="emotion">I feel so <%= pins.emotion %></h4>			
				<p>
					<%= link_to("Delete", {:action => 'destroy', :id => pins.id}, confirm: "Are you sure you want to delete this Pin?") %>
					<%= link_to 'Edit', {:action => 'edit', :id => pins.id}  %>
					<%= link_to 'Show', {:action => 'show', :id => pins.id}  %>
				</p>			
			</div>
		</div>
	</div>
<% end %>
</div>

