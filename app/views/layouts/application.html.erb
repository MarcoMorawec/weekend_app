<!DOCTYPE html>
<html>
<head>
  <title>WeekendApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0;"/>
</head>
<body class="<%= @backgroundpage %>-background">
<section >

<div class="navbar navbar-inverse">
	<div class="navbar-inner">
		<div class="container">
			<!-- .btn-navbar is used as the toggle for collapsed navbar content -->
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			</a>
			 
			<!-- Be sure to leave the brand out there if you want it shown -->
			<%= link_to("Web Dev Apprentice", root_path, :class => 'brand') %>
			 
			<!-- Everything you want hidden at 940px or less, place within here -->
			<div class="nav-collapse collapse">
				<ul class="nav">
					<li>
						<%= link_to('My App', pins_path) %>
					</li>
				</ul>
				<ul class="nav pull-right">
					<li>
						<%= link_to('Sign In', :class => '') %>						
					</li>
					<% if %>
						<%= link_to("Add Pin", new_pin_path, :class => 'btn btn-success') %>
						<li>
							<%= link_to('Sign Out') %>
						</li>
					<% end %>	
				</ul>
			<!-- .nav, .navbar-search, .navbar-form, etc -->
			</div>
		</div>
	</div>
</div>

	<%= yield %>

</section> <!-- Background end -->
</body>
</html>
